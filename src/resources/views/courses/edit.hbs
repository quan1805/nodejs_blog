<div class='mt-4'>
  <h3 class='align-center'>Thông tin khóa học</h3>
  <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Tên</label>
      <input
        type='text'
        class='form-control'
        id='name'
        name='name'
        value='{{course.name}}'
      />
    </div>
    <div class='mb-3'>
      <label for='description' class='form-label'>Mô tả khóa học</label>
      <textarea
        type='text'
        class='form-control'
        id='description'
        name='description'
      >{{course.description}}
      </textarea>
    </div>
    <div class='mb-3'>
      <label for='videoId' class='form-label'>Video ID</label>
      <input
        type='text'
        class='form-control'
        id='videoId'
        name='videoId'
        value='{{course.videoId}}'
      />
    </div>
    <button type='submit' class='btn btn-primary text-uppercase'>Lưu khóa học</button>
  </form>
</div>